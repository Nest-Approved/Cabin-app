{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nest Approved data schema",
  "type": "object",
  "required": ["menu", "checklists"],
  "properties": {
    "schemaVersion": { "type": "string" },
    "lastUpdated": { "type": "string", "format": "date" },
    "locale": { "type": "string" },
    "menu": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "order": { "type": "integer" }
        },
        "additionalProperties": false
      }
    },
    "checklists": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["id", "text"],
          "properties": {
            "id": { "type": "string" },
            "text": { "type": "string" },
            "why": { "type": "string" },
            "look": { "type": "string" },
            "mistake": { "type": "string" },
            "pro": { "type": "string" },
            "note": { "type": "string" },
            "badImage": {
              "oneOf": [
                { "type": "string", "format": "uri" },
                {
                  "type": "object",
                  "required": ["url"],
                  "properties": {
                    "url": { "type": "string", "format": "uri" },
                    "alt": { "type": "string" }
                  },
                  "additionalProperties": false
                }
              ]
            },
            "goodImage": {
              "oneOf": [
                { "type": "string", "format": "uri" },
                {
                  "type": "object",
                  "required": ["url"],
                  "properties": {
                    "url": { "type": "string", "format": "uri" },
                    "alt": { "type": "string" }
                  },
                  "additionalProperties": false
                }
              ]
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "additionalProperties": false
}