    "spring": [
      {
        "id": "s1",
        "text": "Inspect roof shingles",
        "why": "Freeze-thaw cycles commonly loosen or crack shingles, creating leak paths.",
        "look": "Missing, curled, cracked, or displaced shingles.",
        "mistake": "Assuming leaks only show up inside.",
        "pro": "If multiple shingles are damaged or roof is steep.",
        "note": "Roof damage is often visible from the ground with binoculars.",
        "badImage": "https://upload.wikimedia.org/wikipedia/commons/6/6d/Damaged_roof_shingles.jpg",
        "goodImage": "https://upload.wikimedia.org/wikipedia/commons/3/3c/Asphalt_shingle_roof.jpg"
      },
      {
        "id": "s2",
        "text": "Check roof flashing",
        "why": "Improper flashing is one of the most common sources of water intrusion.",
        "look": "Rust, gaps, lifted edges, or missing sealant.",
        "mistake": "Relying on caulk alone instead of proper flashing.",
        "pro": "If flashing is embedded or integrated with roofing.",
        "note": "Sealants fail; metal flashing is the primary defense.",
        "badImage": "https://upload.wikimedia.org/wikipedia/commons/8/8e/Improper_roof_flashing.jpg",
        "goodImage": "https://upload.wikimedia.org/wikipedia/commons/3/3c/Proper_roof_flashing.jpg"
      },
      {
        "id": "s3",
        "text": "Clean gutters",
        "why": "Blocked gutters cause overflow that damages siding and foundations.",
        "look": "Leaves, debris, standing water.",
        "mistake": "Only cleaning visible sections.",
        "pro": "If gutters are high or improperly sloped.",
        "note": "Overflow stains are evidence of past problems.",
        "badImage": "https://upload.wikimedia.org/wikipedia/commons/2/2f/Clogged_gutter.jpg",
        "goodImage": "https://upload.wikimedia.org/wikipedia/commons/4/4a/Clean_gutter.jpg"
      },
      {
        "id": "s4",
        "text": "Verify downspout discharge",
        "why": "Poor discharge directs water toward the foundation.",
        "look": "Downspouts terminating near the house.",
        "mistake": "Assuming extensions are optional.",
        "pro": "If grading corrections are needed.",
        "note": "Water management is a foundation protection issue.",
        "badImage": "https://upload.wikimedia.org/wikipedia/commons/5/5e/Downspout_no_extension.jpg",
        "goodImage": "https://upload.wikimedia.org/wikipedia/commons/8/8f/Downspout_extension.jpg"
      },
      {
        "id": "s5",
        "text": "Check exterior grading",
        "why": "Negative grading allows water to pool at the foundation.",
        "look": "Soil sloping toward the house.",
        "mistake": "Adding mulch without correcting slope.",
        "pro": "If regrading is extensive.",
        "note": "Proper slope is the first line of moisture defense.",
        "badImage": "https://upload.wikimedia.org/wikipedia/commons/5/5e/Negative_grading.jpg",
        "goodImage": "https://upload.wikimedia.org/wikipedia/commons/8/8f/Proper_grading_house.jpg"
      },
      {
        "id": "s6",
        "text": "Inspect foundation walls",
        "why": "Cracks can indicate movement or moisture intrusion.",
        "look": "Horizontal, stair-step, or widening cracks.",
        "mistake": "Ignoring small cracks.",
        "pro": "If cracks are wide or offset.",
        "note": "Crack type matters more than size.",
        "badImage": "https://upload.wikimedia.org/wikipedia/commons/7/7b/Foundation_crack.jpg",
        "goodImage": "https://upload.wikimedia.org/wikipedia/commons/1/1b/Concrete_foundation_good.jpg"
      },
      {
        "id": "s7",
        "text": "Inspect siding condition",
        "why": "Damaged siding allows water and pests into wall cavities.",
        "look": "Rot, cracks, missing panels.",
        "mistake": "Painting over rot.",
        "pro": "If structural sheathing is affected.",
        "note": "Probe wood siding near grade.",
        "badImage": "https://upload.wikimedia.org/wikipedia/commons/3/3f/Rotted_wood_siding.jpg",
        "goodImage": "https://upload.wikimedia.org/wikipedia/commons/6/6a/Vinyl_siding_good_condition.jpg"
      },
      {
        "id": "s8",
        "text": "Check window seals",
        "why": "Failed seals allow air and water infiltration.",
        "look": "Cracked caulk, gaps.",
        "mistake": "Using interior caulk only.",
        "pro": "If windows require removal.",
        "note": "Exterior sealing is critical.",
        "badImage": "https://upload.wikimedia.org/wikipedia/commons/1/1e/Damaged_window_caulk.jpg",
        "goodImage": "https://upload.wikimedia.org/wikipedia/commons/4/44/Sealed_window_exterior.jpg"
      },
      {
        "id": "s9",
        "text": "Inspect decks and railings",
        "why": "Loose or rotted components create fall hazards.",
        "look": "Wobble, rot, loose fasteners.",
        "mistake": "Only checking walking surface.",
        "pro": "If ledger attachment is questionable.",
        "note": "Ledger failures cause collapses.",
        "badImage": "https://upload.wikimedia.org/wikipedia/commons/9/90/Rotted_deck.jpg",
        "goodImage": "https://upload.wikimedia.org/wikipedia/commons/2/29/Wood_deck_good_condition.jpg"
      },
      {
        "id": "s10",
        "text": "Test exterior GFCI outlets",
        "why": "Faulty GFCIs increase shock risk.",
        "look": "No trip or reset.",
        "mistake": "Assuming indoor protection covers exterior.",
        "pro": "If outlets will not reset.",
        "note": "Exterior outlets must be GFCI-protected.",
        "badImage": "https://upload.wikimedia.org/wikipedia/commons/0/0e/Damaged_outdoor_outlet.jpg",
        "goodImage": "https://upload.wikimedia.org/wikipedia/commons/3/36/GFCI_outlet_test.jpg"
      }

